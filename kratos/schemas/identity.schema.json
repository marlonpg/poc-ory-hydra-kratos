{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/identity.schema.json",
  "title": "Default Identity Schema",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email"
        },
        "name": {
          "type": "object",
          "properties": {
            "first": { "type": "string" },
            "last": { "type": "string" }
          },
          "required": ["first", "last"]
        },
        "eligible": {
          "type": "boolean",
          "default": true
        }
      },
      "required": ["email", "name"]
    }
  }
}
